<h1>Welcome to creating a Post </h1>
<% if flash[:post_errors] %>
  <% flash[:post_errors].each do |error| %>
    <p style="color:red;"><%= error %></p>
  <% end %>
<% end  %>

<%= form_for @post do |f|%>
<%= f.label :title%>
<%= f.text_field :title%>
<br>
<%= f.label :content%>
<%= f.text_field :content%>
<br>
<%= f.label :blogger %>
<%= f.collection_select :blogger_id, Blogger.all, :id, :name %>
<br>
<%= f.label :destination %>
<%= f.collection_select :destination_id, Destination.all, :id ,:name %>
<br>
<%= f.submit%>
<%end%>